    "authentication": {
	"secret": "<your secret>",
	"strategies": [
	    "jwt",
	    "local"
	],
	"path": "/authentication",
	"service": "users",
	"identifyUserProps": ["telegramId"],
	"jwt": {
	    "header": {
		"typ": "access"
	    },
	    "audience": "http://api-r4dardev-tk.umbler.net",
	    "subject": "anonymous",
	    "issuer": "feathers",
	    "algorithm": "HS256",
	    "expiresIn": "1d"
	},
	"local": {
	    "entity": "user",
	    "usernameField": "telegramId",
	    "passwordField": "hash"
	},
	"telegram":{
	    "username": "<bot name teminated with bot>",
	    "token": "<token>",
	    "admins": ["<admins...>"]
	},
	"openid":{
	    "issuer": "https://id.org.br",
	    "redirect_url": "/",
	    "clientID": "<client id>",
	    "clientSecret": "<client secret>"  
	}
