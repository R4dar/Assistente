{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "mongodb": "mongodb://localhost:27017/assistente",
  "swagger": {
    "docsPath": "/swagger",
    "uiIndex": "public/swagger.html",
    "info": {
      "title": "R4dar Assistente Swagger API",
      "description": "A swagger api para controle do assistente do R4dar"
    },
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header"
      }
    }
  },
  "swagger/users": {
    "description": "User service",
    "definitions": {
      "users list": {
        "$ref": "#/definitions/users"
      }
    },
    "find": {
      "security": [
        {
          "jwt": []
        }
      ]
    },
    "get": {
      "parameters": [
        {
          "in": "path",
          "name": "_id",
          "type": "string",
          "description": "the id of a user"
        }
      ],
      "security": [
        {
          "jwt": []
        }
      ]
    },
    "create": {},
    "update": {
      "parameters": [
        {
          "in": "path",
          "name": "_id",
          "type": "string",
          "description": "the id of a user"
        }
      ],
      "security": [
        {
          "jwt": []
        }
      ]
    },
    "patch": {
      "parameters": [
        {
          "in": "path",
          "name": "_id",
          "type": "string",
          "description": "the id of a user"
        }
      ],
      "security": [
        {
          "jwt": []
        }
      ]
    },
    "remove": {
      "parameters": [
        {
          "in": "path",
          "name": "_id",
          "type": "string",
          "description": "the id of a user"
        }
      ],
      "security": [
        {
          "jwt": []
        }
      ]
    }
  },
  "swagger/bot": {
    "description": "Bot service",
    "definitions": {
      "bot list": {
        "$ref": "#/definitions/bot"
      },
      "bot": {
        "type": "object",
        "required": [
          "id",
          "message"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "telegram user id to where the message will be sent"
          },
          "message": {
            "type": "object",
            "required": [
              "type",
              "value"
            ],
            "properties": {
              "type": {
                "type": "string",
                "description": "the type of the message"
              },
              "value": {
                "type": "string",
                "description": "the string of a message"
              }
            }
          }
        }
      }
    },
    "create": {
      "security": [
        {
          "jwt": []
        }
      ]
    }
  },
  "authentication": {
    "secret": "",
    "strategies": [
      "jwt"
    ],
    "path": "/authentication",
    "service": "users",
    "jwt": {
      "header": {
        "typ": "access"
      },
      "audience": "localhost:3000",
      "subject": "anonymous",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "openid": {
      "clientID": "<your open id client>",
      "clientSecret": "<your open id secret>",
      "successRedirect": "/",
      "domain": "localhost:3000",
      "scopes": [
        "openid email"
      ]
    },
    "telegram":{
      "username": "<your bot username>",
      "token": "<your bot token>",
      "whitelist": [
	  "<your personal chat id>"
      ]
    },
    "cookie": {
      "enabled": true,
      "name": "feathers-jwt",
      "httpOnly": false,
      "secure": false
    }
  }
}
