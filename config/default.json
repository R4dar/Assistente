{
    "host": "localhost",
    "port": 3030,
    "public": "../public/",
    "paginate": {
	"default": 10,
	"max": 50
    },
    "mongodb": "mongodb://localhost:27017/assistente",
    "swagger": {
	"docsPath": "/swagger",
	"uiIndex": "public/swagger.html",
	"info": {
	    "title": "R4dar Assistente Swagger API",
	    "description": "A swagger api para controle do assistente do R4dar"
	},
	"securityDefinitions": {
	    "auth0": {
		"type": "apiKey",
		"name": "authorization",
		"in": "header"
	    }
	}
    },
    "swagger/authentication": {
	"description": "Authentication service",
	"definitions": {
	    "authentication list": {
		"$ref": "#/definitions/authentication"
	    },
	    "authentication": {
		"type": "object",
		"required": ["jwt"],
		"properties": {
		    "jwt": {
			"type": "string",
			"description": "jwt token"
		    }
		}
	    }
	},
	"create": {
	    "security": [{
		"auth0": []
	    }]
	},
	"remove": {
	    "security": [{
		"auth0": []
	    }]
	}
    },
    "swagger/users": {
	"description": "User service",
	"definitions": {
	    "users list": {
		"$ref": "#/definitions/users"
	    }
	},
	"find": {
	    "security": [{
		"auth0": []
	    }]
	},
	"get": {
	    "security": [{
		"auth0": []
	    }]
	},
	"put": {
	    "security": [{
		"auth0": []
	    }]
	},
	"patch": {
	    "security": [{
		"auth0": []
	    }]
	},
	"remove": {
	    "security": [{
		"auth0": []
	    }]
	}
    },
    "authentication": {
	"secret": "",
	"strategies": [
	    "jwt"
	],
	"path": "/authentication",
	"service": "users",
	"jwt": {
	    "header": {
		"typ": "access"
	    },
	    "audience": "https://api.r4dar-assistente.org",
	    "subject": "anonymous",
	    "issuer": "feathers",
	    "algorithm": "HS256",
	    "expiresIn": "1d"
	},
	"auth0": {
	    "clientID": "your auth0 client id",
	    "clientSecret": "your auth0 client secret",
	    "successRedirect": "/",
	    "domain": "mydomain.auth0.com",
	    "scopes": [
		"profile"
	    ]
	},
	"telegram": {
	    "username": "R4DARDEV_bot",
	    "token": "<your token>"
	},
	"cookie": {
	    "enabled": true,
	    "name": "feathers-jwt",
	    "httpOnly": false,
	    "secure": false
	}
    }
}
